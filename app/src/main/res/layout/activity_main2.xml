<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/ultraViolet"
        >

    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/left_arrow"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
    <Button
        android:id="@+id/img_id"
        android:background="@drawable/shape_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toLeftOf="@id/text_id"
        android:layout_centerInParent="true"
        />
    <EditText
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:text="myID : bjh95100"
        android:textSize="10dp"
       android:textColor="@color/colorIDICon"
        android:layout_centerInParent="true"
        />
    </RelativeLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/grid_view"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numColumns="4"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            >
            <ImageView
                android:background="@drawable/btn_home_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_weight="1"


                />
            <ImageView
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_add_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_weight="1"

                />
            <ImageView
                android:layout_marginLeft="40dp"
                android:background="@drawable/btn_search_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Button"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>